<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="4dp"
              android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_widget_top_round_corner"
        android:padding="8dp"
        android:text="@string/app_suggestion"
        android:textColor="#88FFFFFF"
        android:textSize="16sp"/>
    <GridLayout
        android:id="@+id/suggestedAppGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_widget_bottom_round_corner"
        android:columnCount="@integer/col_count"
        android:rowCount="1"/>
</LinearLayout>